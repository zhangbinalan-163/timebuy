<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.alan.app.timebuy.dao.mapper.NewsMapper">

    <sql id="TABLE">d_timebuy_news</sql>

    <resultMap id="DATA" type="com.alan.app.timebuy.entity.News">
        <id property="newsId" column="news_id"/>
        <result property="news" column="news"/>
        <result property="starttime" column="starttime"/>
        <result property="finishtime" column="finishtime"/>
        <result property="phone" column="phone"/>
        <result property="label" column="label"/>
        <result property="money" column="money"/>
        <result property="coordname" column="coordname"/>
        <result property="coordx" column="coordx"/>
        <result property="coordy" column="coordy"/>
        <result property="pic" column="pic"/>
        <result property="userid" column="userid"/>
        <result property="kind" column="kind"/>
        <result property="praise" column="praise"/>
    </resultMap>

    <insert id="insert" parameterType="com.alan.app.timebuy.entity.News" useGeneratedKeys="true" keyColumn="id" keyProperty="newsId">
        INSERT INTO <include refid="TABLE"/>
        (news_id,news,starttime,finishtime,phone,label,money,coordname,coordx,coordy,pic,userid,praise)
        VALUES(#{newsId},#{news},#{starttime},#{finishtime},#{phone},#{label},#{money},#{coordname},#{coordx},#{coordy},#{pic},#{userid},#{praise})
    </insert>

    <select id="getNewsById" parameterType="int" resultMap="DATA">
         SELECT * FROM
         <include refid="TABLE" />
        WHERE userid = #{userid}
    </select>

    <select id="getNewsAll" resultMap="DATA">
        SELECT * FROM
        <include refid="TABLE"/>
        ORDER BY #{newsId}
    </select>

    <select id="selectNewsById" parameterType="int" resultMap="DATA" >
        SELECT * FROM
        <include refid="TABLE"/>
        WHERE news_id = #{newsId}
    </select>

    <update id="accept" parameterType="com.alan.app.timebuy.entity.News">
       UPDATE
       <include refid="TABLE"/>
        <set>
              <if test="acceptUserid != null">accept_userid=#{acceptUserid},</if>
        </set>
        WHERE news_id = #{newsId}
    </update>

    <select id="scheduleNews" parameterType="com.alan.app.timebuy.entity.News" resultMap="DATA">
       SELECT * FROM
       <include refid="TABLE"/>
        WHERE userid = #{userid} OR accept_userid = #{userid}
    </select>

    <select id="help" resultMap="DATA">
        SELECT * FROM
        <include refid="TABLE" />
        WHERE kind = 13 OR kind = 31 OR kind = 14 OR kind = 41 OR kind = 15 OR kind = 51
    </select>

    <select id="run" resultMap="DATA">
      SELECT * FROM
      <include refid="TABLE"/>
      WHERE kind = 23 OR kind = 32 OR kind = 24 OR kind = 42 OR kind = 25 OR kind = 52
    </select>

    <select id="group" resultMap="DATA">
       SELECT * FROM
       <include refid="TABLE"/>
       WHERE kind = 23 OR kind = 23 OR kind = 34 OR kind = 43 OR kind = 35 OR kind = 53 OR kind = 13 OR kind = 31
    </select>

    <select id="welfare" resultMap="DATA">
       SELECT * FROM
       <include refid="TABLE"/>
       WHERE kind = 14 OR kind = 41 OR kind = 42 OR kind = 24 OR kind = 43 OR kind = 34 OR kind = 45 OR kind = 54
    </select>

    <update id="praise" parameterType="com.alan.app.timebuy.entity.News">
        UPDATE
        <include refid="TABLE" />
        <set>
            <if test="praise != null">praise=#{praise}</if>
        </set>
        WHERE news_id = #{newsId}
    </update>

</mapper>